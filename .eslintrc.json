{
  "extends": [
    "eslint:recommended",
    "plugin:unicorn/recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": ["unicorn", "@typescript-eslint"],
  "parser": "@typescript-eslint/parser",
  "root": true,
  "rules": {
    "unicorn/filename-case": [
      "error",
      {
        "cases": {
          "kebabCase": true,
          "pascalCase": true
        }
      }
    ]
  },
  "ignorePatterns": ["jest.config.js"]
}
